                setTimeout(() => {
                    showMessage(":DDDDD....", "#700808ff");
                }, 5500);
                                 // 4. SEGUNDO MENSAJE DESPUÉS DE 4 SEGUNDOS
                setTimeout(() => {
                    showMessage("¿¿¿QUE ESPERAS???", "#700808ff");
                }, 7500);
                // 4. SEGUNDO MENSAJE DESPUÉS DE 4 SEGUNDOS
                setTimeout(() => {
  const line1 = "\u00A0".repeat(0) + "BUENO, SOLO PORQUE";  // sangría a la primera línea
  const line2 = "\u00A0".repeat(7) + "ME DAS PENA";     // sangría a la segunda línea
  showMessage(line1 + "\n" + line2, "#1c0202ff");
}, 9800);
                
// 5. FLORES DESPUÉS DE 6 SEGUNDOS
                setTimeout(() => {
                    hideMessage();
                    showYellowFlowers();
                }, 11000);

// 6. IMAGEN FINAL DESPUÉS DE 10 SEGUNDOS
setTimeout(() => {
    const finalContainer = document.createElement('div');
    finalContainer.innerHTML = `
        <div style="position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center; z-index: 99999; opacity: 1; transition: opacity 2s ease-in;">
            <div style="width: 800px; height: 500px; background-image: url('/flores-amarillas/images/flores1.jpg'); background-size: cover; background-position: center; border-radius: 20px; box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5); margin-bottom: 20px;"></div>
            <div style="font-size: 4rem; font-weight: 700; color: #FF0066; text-shadow: 5px 5px 8px rgba(0, 0, 0, 0.8); font-family: 'Dancing Script', cursive; background: rgba(179, 221, 227, 0.9); padding: 20px 40px; border-radius: 15px; border: 3px solid #FF0066; transform: translateX(5px);">TOMA INFIEL</div>
        </div>
    `;
    document.body.appendChild(finalContainer);
}, 11500);

            });
        });
        
        // ============ CREAR EFECTOS DE CELEBRACIÓN ============
        function createCelebrationEffects() {
            console.log('Creando efectos de celebración');
            
            // Crear 100 confetis
            for (let i = 0; i < 100; i++) {
                setTimeout(() => {
                    createParticle('confetti');
                }, i * 20);
            }
            
            // Crear 30 globos
            for (let i = 0; i < 30; i++) {
                setTimeout(() => {
                    createParticle('balloon');
                }, i * 50);
            }
            
            // Crear 50 serpentinas
            for (let i = 0; i < 50; i++) {
                setTimeout(() => {
                    createParticle('serpentina');
                }, i * 30);
            }
        }
        
        function createParticle(type) {
            const particle = document.createElement('div');
            
            // Colores aleatorios
            const colors = ['#ff6b6b', '#4ecdc4', '#45b7d1', '#96ceb4', '#feca57', '#ff9ff3', '#54a0ff', '#e74c3c', '#3498db', '#2ecc71'];
            const color = colors[Math.floor(Math.random() * colors.length)];
            
            let size = '';
            if (type === 'confetti') {
                size = '50px';
            } else if (type === 'balloon') {
                size = '80px';
            } else if (type === 'serpentina') {
                size = '15px';
            }
            
            particle.style.cssText = `
                position: fixed;
                top: -50px;
                left: ${Math.random() * 100}vw;
                width: ${size};
                height: ${type === 'balloon' ? '30px' : (type === 'serpentina' ? '20px' : size)};
                background-color: ${color};
                z-index: 10000;
                animation: testFall 3s linear forwards;
                animation-delay: ${Math.random() * 1}s;
                ${type === 'balloon' ? 'border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;' : ''}
            `;
            
            document.body.appendChild(particle);
            
            // Limpiar después de 4 segundos
            setTimeout(() => {
                if (particle.parentNode) {
                    particle.remove();
                }
            }, 4000);
        }
        
        // ============ OCULTAR ELEMENTOS ============
        function hideExistingElements() {
            console.log('Ocultando elementos');
            const titleText = document.querySelector('.title-text');
            const flagBackground = document.querySelector('.flag-background');
            const mainContainer = document.querySelector('.main-container');
            
            if (titleText) titleText.classList.add('hidden');
            if (flagBackground) flagBackground.classList.add('hidden');
            if (mainContainer) mainContainer.classList.add('hidden');
        }
        
        // ============ MOSTRAR MENSAJES ============
        function showMessage(text, color) {
            console.log('Mostrando mensaje:', text);
            
            // Limpiar mensajes anteriores
            hideMessage();
            
            const message = document.createElement('div');
            message.setAttribute('data-message', 'true');
            message.textContent = text;
            message.style.cssText = `
                position: fixed;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                font-size: 4rem;
                font-weight: 700;
                color: ${color};
                background: rgba(182, 245, 243, 0.95);
                padding: 30px 50px;
                border: 3px solid ${color};
                border-radius: 20px;
                z-index: 99999;
                font-family: 'Dancing Script', cursive;
                text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
            `;
            
            document.body.appendChild(message);
        }
        
        function hideMessage() {
            const messages = document.querySelectorAll('[data-message="true"]');
            messages.forEach(msg => {
                if (msg.parentNode) {
                    msg.remove();
                }
            });
        }
        
        // ============ MOSTRAR FLORES AMARILLAS ============
        function showYellowFlowers() {
            console.log('Mostrando flores amarillas');
            
            for (let i = 0; i < 300; i++) {
                setTimeout(() => {
                    createYellowFlower();
                }, i * 60);
            }
        }
        
