    <!-- LISTÓN DERECHO CON MOÑO -->
    <div class="ribbon-right">
        <div class="bow-decoration bow-right"></div>
    </div>

    <!-- TÍTULO CON IMAGEN DE BANDERA -->
    <div class="flag-background"></div>
    <h1 class="title-text">FELIZ 21 DE SEPTIEMBRE</h1>

    <!-- CONTENIDO PRINCIPAL -->
    <div class="main-container">
        <!-- REGALO -->
        <div class="gift-box" id="giftBox"></div>
        <!-- TEXTO DE INSTRUCCIÓN -->
        <div class="instruction">¡Haz click en el regalo! Mi pequeña cachuda :3🎁</div>
    </div>

    <script>
        console.log('Script cargado correctamente');
        
        // ============ EFECTOS DE CELEBRACIÓN ============
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM cargado');
            const giftBox = document.getElementById('giftBox');
            console.log('Regalo encontrado:', giftBox);
            
            if (!giftBox) {
                console.error('No se encontró el elemento giftBox');
                return;
            }
            
            giftBox.addEventListener('click', function() {
                console.log('¡¡¡ CLICK DETECTADO !!!');
                
                // Evitar múltiples clicks
                giftBox.style.pointerEvents = 'none';
                
                // 1. CREAR EFECTOS DE CELEBRACIÓN
                createCelebrationEffects();
                
                // 2. OCULTAR ELEMENTOS DESPUÉS DE 1 SEGUNDO
                setTimeout(() => {
                    hideExistingElements();
                }, 1000);
                
                // 3. PRIMER MENSAJE DESPUÉS DE 2 SEGUNDOS
                setTimeout(() => {
