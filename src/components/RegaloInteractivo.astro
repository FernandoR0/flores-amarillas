    flower.style.cssText = `
        position: fixed;
        top: -80px;
        left: ${Math.random() * 100}vw;
        width: 80px;
        height: 80px;
        background-image: url('/flores-amarillas/images/flores2.png');
        background-size: cover;
        background-position: center;
        z-index: 9999;
        opacity: 1; /* 🔹 aquí controlas la transparencia */
        animation: testFall 4s ease-in forwards;
        animation-delay: ${Math.random() * 1}s;
    `;
    document.body.appendChild(flower);
            
